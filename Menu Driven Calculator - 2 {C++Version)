#include <iostream>
#include <iomanip>   
using namespace std;

int main() {
    cout << "............ Menu-Driven Calculator .................." << endl;
    int choice;
    
    do {
       
        system("cls");   
        
        cout << "\n========== CALCULATOR MENU ==========" << endl;
        cout << "1. Addition" << endl;
        cout << "2. Subtraction" << endl;
        cout << "3. Multiplication" << endl;
        cout << "4. Division" << endl;
        cout << "5. Exit" << endl;
        cout << "=====================================" << endl;
        cout << "Enter your choice: ";
        cin >> choice;

        if (choice >= 1 && choice <= 4) {   
            double num1, num2;   
            cout << "Enter first number: ";
            cin >> num1;
            cout << "Enter second number: ";
            cin >> num2;

            cout << "\n------------------------------------" << endl;
            
            switch (choice) {
                case 1:
                    cout << "Result: " << (num1 + num2) << endl;
                    break;
                case 2:
                    cout << "Result: " << (num1 - num2) << endl;
                    break;
                case 3:
                    cout << "Result: " << (num1 * num2) << endl;
                    break;
                case 4:
                    if (num2 != 0) {
                        cout << fixed << setprecision(2);  
                        cout << "Result: " << (num1 / num2) << endl;
                    } else {
                        cout << "Error: Division by zero!" << endl;
                    }
                    break; 
            }
            
            cout << "------------------------------------" << endl;
            cout << "Press Enter to continue...";
            cin.ignore(); 
            cin.get();    
            
        } else if (choice == 5) {
            cout << "Thank you, Goodbye! ðŸ‘‹" << endl;
        } else {
            cout << "Invalid choice! Please select 1-5." << endl;
            cout << "Press Enter to continue...";
            cin.ignore();
            cin.get();
        }
        
    } while (choice != 5);
    
    return 0;
}
